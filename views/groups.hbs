<ul id="groups" class="m-0 p-0">
    {{#if groups}}
        {{#each groups}}
            <li class="m-1">
                    <form id="{{dataValues.id}}" class="outputForm d-flex row justify-content-between">
                        <div class="col-2">
                            <input class='input text-light text-center color-passive' readonly="" name="id" value="{{dataValues.id}}" placeholder="Identifier" >
                        </div>
                        <div class="col-6">
                            <input id="{{dataValues.id}}" name="name" value="{{dataValues.name}}" placeholder="Enter the name of the group" class="inputActive input text-light text-center color-passive" disabled="disabled">            
                            </input>
                        </div>
                        <div class="col-2">
                            <button id="{{dataValues.id}}" type="button"  class="buttonEdit button btn-danger">&#9998;</button>	
                        </div>
                        <div class="col-2 hide">
                            <button type="submit" class="buttonSave button btn-success">&#10004;</button>
                        </div>
                        <div class="col-2">
                            <button id="{{dataValues.id}}" type="submit"  class="buttonDel button btn-danger ">&#10006;</button>
                        </div>
                    </form>
                <table id="{{dataValues.id}}" class="table hide">
                    <thead class="thead-light">
                        <tr>
                            <th>â„–</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each dataValues.students}}
                            <tr>
                                <th scope="row">{{dataValues.id}}</th>
                                <td>{{dataValues.firstName}}</td>
                                <td>{{dataValues.lastName}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </li>
        {{/each}}
    {{/if}}
    <li id="inputLi" class="m-1">
        <button type="button" class="buttonAdd button btn-success ">&#10010;</button>
    </li> 
</ul>
