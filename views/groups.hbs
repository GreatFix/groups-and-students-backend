{{#if groups}}
<ul id="groups" class="m-0 p-0">
    {{#each groups}}
        <li class="m-1">
            <label class="form-control text-center text-light p-1 m-0 group-color">
                {{dataValues.name}}
            </label>
            <table class="table hide">
                <thead class="thead-light">
                    <tr>
                        <th>â„–</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each dataValues.students}}
                        <tr>
                            <th scope="row">{{dataValues.id}}</th>
                            <td>{{dataValues.firstName}}</td>
                            <td>{{dataValues.lastName}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>

        </li>
    {{/each}}
    <script>
        $groups = document.querySelector( '#groups' )
        $groups.addEventListener("click", (event)=>{if(event.target.nodeName==='LABEL') active(event) })
        function active(event){
                let label = event.target
                label.classList.toggle('group-color')
                label.classList.toggle('group-color-active')
                let table = event.target.nextSibling.nextSibling
                table.classList.toggle('hide')
        }
    </script>
</ul>
{{else }}
<h3> Not founded </h3>
{{/if}}