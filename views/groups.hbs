<ul id="groups" class="m-0 p-0">
    {{#if groups}}
        {{#each groups}}
            <li id="{{dataValues.id}}" class=" m-1">
                <div class="d-flex row justify-content-between">
                    <div class="col-8"> 
                        <label id="{{dataValues.id}}" class="labelActive form-control text-center text-light p-1 m-0 color-passive">
                            {{dataValues.name}}
                        </label>
                    </div>
                    <div class="col-sm-2">
                        <button id="{{dataValues.id}}" type="button"  class="buttonEdit form-control btn-danger ">&#9998;</button>	
                    </div>
                    <div class="col-sm-2">
                            <button id="{{dataValues.id}}" type="button"  class="buttonDel form-control btn-danger ">&#10006;</button>
                    </div>
                </div>
                <table id="{{dataValues.id}}" class="table hide">
                    <thead class="thead-light">
                        <tr>
                            <th>â„–</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each dataValues.students}}
                            <tr>
                                <th scope="row">{{dataValues.id}}</th>
                                <td>{{dataValues.firstName}}</td>
                                <td>{{dataValues.lastName}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>

            </li>
        {{/each}}
    {{/if}}
    <li id="inputLi" class="m-1">
        <button type="button" class="buttonAdd form-control btn-success ">&#10010;</button>
    </li> 
</ul>
